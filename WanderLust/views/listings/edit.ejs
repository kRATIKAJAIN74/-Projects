<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">

  
<h3>Edit Your Listing</h3>
<form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
  
  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input type="text" value="<%= listing.title %>" name="listing[title]" class="form-control">
  </div>

  <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea name="listing[description]" class="form-control"><%= listing.description %></textarea>
  </div>

  <div class="mb-3">
    <label for="image" class="form-label">Image Link</label>
    <input type="text" value="<%= listing.image %>" name="listing[image]" class="form-control">
  </div>

  <div class="mb-3">
    <label for="price" class="form-label">Price</label>
    <input type="number" value="<%= listing.price %>" name="listing[price]" class="form-control">
  </div>

  <div class="mb-3">
    <label for="location" class="form-label">Location</label>
    <input type="text" value="<%= listing.location %>" name="listing[location]" class="form-control">
  </div>

  <div class="mb-3">
    <label for="country" class="form-label">Country</label>
    <input type="text" value="<%= listing.country %>" name="listing[country]" class="form-control">
  </div>

  <button class="btn btn-dark edit-btn">Edit</button>
</form>
</div>
</div>